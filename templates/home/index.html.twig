{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}


        <div class="homeBg">
            <div class="homeText">
                <h1>Bienvenue sur le site officiel de MegaCasting !</h1>
                <p>Vous trouverez, en bas de cette page, <br>différentes offres qui peuvent vous intéresser.</p>
            </div>
        </div>

    <div class="container">
        <div class="row-fluid">
            {% for i in range(0, offres|length, 4) %}
                <div class="row mb-5">
                    {% for offre in offres[i:i+4] %}
                        <div class="col-sm-3 mb-3 mb-sm-0 " >
                            <div class="card text-center">
                            <a class="" style="width: 18rem;" href="{{ path('app_offre', {'id': offre.id}) }}">
                                <div class="card-header">
                                   <h5> {{ offre.label }} </h5>
                                </div>

                                <div class="card-body">
                                    <p class="card-title">{{ offre.description }}</p>
                                    <p class="card-text">{{ offre.localisation }}</p>
                                </div>
                            </a>
                                <div class="card-footer text-muted">
                                    <p>Offre publié le : {{ offre.parutionDateTime.format('d-m-Y') }}</p>
                                    {% if app.user != null %}
                                    <a href=""><button class="btn btn-dark">Postuler</button></a>
                                    {% endif %}
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

