{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container">
        <div id="carouselExample" class="carousel slide mb-5" style="height: 600px">
            <div class="carousel-inner" style="height: 600px">
                <div class="carousel-item active">
                    <img src="https://dirprodformations.fr/wp-content/uploads/2017/09/casting-1184x788.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" style="height: 600px">
                    <img src="data:image/png;base64," class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" style="height: 600px">
                    <img src="https://www.courslefoyer.com/images/easyblog_articles/101/casting-2.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="row-fluid">
            {% for i in range(0, offres|length, 4) %}
                <div class="row mb-5">
                    {% for offre in offres[i:i+4] %}
                        <div class="col-sm-3 mb-3 mb-sm-0" >
                            <a class="card text-center" style="width: 18rem;" href="{{ path('app_offre', {'id': offre.id}) }}">
                                <div class="card-header">
                                   <h5> {{ offre.label }} </h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-title">{{ offre.description }}</p>
                                    <p class="card-text">{{ offre.localisation }}</p>
                                </div>
                                <div class="card-footer text-muted">
                                    <p>Offre publié le : {{ offre.parutionDateTime.format('d-m-y') }}</p>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('app_offre_edit') }}"><button class="btn btn-primary">Ajouter une offre de casting</button></a>
        <table class="table">
            <tr>
                <th>Nom de l'offre</th>
                <th>Date de début</th>
                <th>Editer</th>
            </tr>
            {% for offre in offres %}
                <tr>
                    <td><a href="{{ path('app_offre', {'id': offre.id}) }}">{{ offre.label }}</a></td>
                    <td>{{ offre.offerStartDate|date('d/m/Y') }}</td>
                    <td><a href="{{ path('app_offre_edit', {'id': offre.id}) }}"><button class="btn btn-primary bi-pencil-fill"></button></a>
                        <a href="{{ path('app_offre_delete', {'id': offre.id}) }}"><button class="btn btn-primary bi-trash"></button></a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

